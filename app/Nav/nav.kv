<ItemDrawer>:
    theme_text_color: "Custom"
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: root.text_color


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "data/logo/kivy-icon-256.png"

    MDLabel:
        text: "Get to the CHOPBOARD!"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "Simple calorie counter application"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        DrawerList:
            id: md_list
            ItemDrawer:
                id: 'dashboard'
                text: 'Dashboard'
                icon: 'view-dashboard'
                #need to figure the change here screen change*
                on_release: root.parent.load_dashboard()
            ItemDrawer:
                id: 'add_item'
                text: 'Food diary'
                icon: 'food'
                #need to figure the change here screen change*
                on_release: root.parent.load_food_diary()
            ItemDrawer:
                id: 'fitness'
                text: 'Fitness'
                icon: 'run'
                #need to figure the change here screen change*
                on_release: root.parent.load_fitness_screen()